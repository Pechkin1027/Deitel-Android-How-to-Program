<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/detailsScrollView">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="2"
        android:useDefaultMargins="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/nameLabelTextView"
            style="@style/ContactLabelTextView"
            android:layout_column="0"
            android:layout_row="0"
            android:text="Name:"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/nameTextView"
            style="@style/ContactTextView"
            android:layout_column="1"
            android:layout_row="0"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/phoneLabelTextView"
            style="@style/ContactLabelTextView"
            android:layout_column="0"
            android:layout_row="1"
            android:text="Phone:"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/phoneTextView"
            style="@style/ContactTextView"
            android:layout_column="1"
            android:layout_row="1"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/emailLabelTextView"
            style="@style/ContactLabelTextView"
            android:layout_column="0"
            android:layout_row="2"
            android:text="E-Mail:"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/emailTextView"
            style="@style/ContactTextView"
            android:layout_column="1"
            android:layout_row="2"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/streetLabelTextView"
            style="@style/ContactLabelTextView"
            android:layout_column="0"
            android:layout_row="3"
            android:text="Street:"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/streetTextView"
            style="@style/ContactTextView"
            android:layout_column="1"
            android:layout_row="3"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/cityLabelTextView"
            style="@style/ContactLabelTextView"
            android:layout_column="0"
            android:layout_row="4"
            android:text="City:"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/cityTextView"
            style="@style/ContactTextView"
            android:layout_column="1"
            android:layout_row="4"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/stateLabelTextView"
            style="@style/ContactLabelTextView"
            android:layout_column="0"
            android:layout_row="5"
            android:text="State:"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/stateTextView"
            style="@style/ContactTextView"
            android:layout_column="1"
            android:layout_row="5"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/zipLabelTextView"
            style="@style/ContactLabelTextView"
            android:layout_column="0"
            android:layout_row="6"
            android:text="Zip:"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/zipTextView"
            style="@style/ContactTextView"
            android:layout_column="1"
            android:layout_row="6"/>

    </GridLayout>

</ScrollView>